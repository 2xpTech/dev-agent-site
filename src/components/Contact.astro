---
import Button from './Button.astro';
---

<section id="contact" class="py-24 relative">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-neutral-100 mb-4 tracking-tightest">
          Construisons ensemble
        </h2>
        <p class="text-xl text-neutral-400">
          Prêt à automatiser votre flux de travail? Contactez-nous.
        </p>
      </div>
      
      <form id="contact-form" action="https://formspree.io/f/xldwgjey" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-300 mb-2">
              Nom
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-neutral-100 placeholder-neutral-600 focus:border-neutral-600 focus:ring-2 focus:ring-neutral-600 focus:ring-offset-2 focus:ring-offset-neutral-950 transition-colors"
              placeholder="Votre nom"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-neutral-300 mb-2">
              Courriel
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-neutral-100 placeholder-neutral-600 focus:border-neutral-600 focus:ring-2 focus:ring-neutral-600 focus:ring-offset-2 focus:ring-offset-neutral-950 transition-colors"
              placeholder="vous@entreprise.com"
            />
          </div>
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-neutral-300 mb-2">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-neutral-100 placeholder-neutral-600 focus:border-neutral-600 focus:ring-2 focus:ring-neutral-600 focus:ring-offset-2 focus:ring-offset-neutral-950 transition-colors resize-none"
            placeholder="Parlez-nous de votre projet..."
          ></textarea>
        </div>
        
        <div class="flex justify-center">
          <Button type="submit" variant="primary" size="md">
            Envoyer le message
          </Button>
        </div>
      </form>
      
      <div id="form-message" class="mt-6 p-4 rounded-lg hidden"></div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formMessage = document.getElementById('form-message');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    // Validate form
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!data.name || !data.email || !data.message) {
      showMessage('Veuillez remplir tous les champs.', 'error');
      return;
    }
    
    if (!emailRegex.test(data.email as string)) {
      showMessage('Veuillez entrer une adresse courriel valide.', 'error');
      return;
    }
    
    // Submit to Formspree
    try {
      const response = await fetch('https://formspree.io/f/xldwgjey', {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });
      
      if (response.ok) {
        showMessage('Merci de nous avoir contacté! Nous vous répondrons bientôt.', 'success');
        form.reset();
      } else {
        showMessage('Une erreur est survenue. Veuillez réessayer.', 'error');
      }
    } catch (error) {
      showMessage('Une erreur est survenue. Veuillez réessayer.', 'error');
    }
  });
  
  function showMessage(message: string, type: 'success' | 'error') {
    if (!formMessage) return;
    
    formMessage.textContent = message;
    formMessage.className = `mt-6 p-4 rounded-lg ${
      type === 'success' 
        ? 'bg-green-900/20 border border-green-800 text-green-400' 
        : 'bg-red-900/20 border border-red-800 text-red-400'
    }`;
    formMessage.classList.remove('hidden');
    
    setTimeout(() => {
      formMessage.classList.add('hidden');
    }, 5000);
  }
</script>