---
export interface Props {
  title?: string;
  description?: string;
  icon?: string;
  class?: string;
}

const { title, description, icon, class: className } = Astro.props;
---

<div
  class:list={[
    'group relative p-8 rounded-2xl transition-all duration-300',
    'bg-gradient-to-br from-neutral-900/90 via-neutral-925/80 to-neutral-900/90',
    'border border-neutral-800/50 hover:border-purple-700/40',
    'hover:shadow-2xl hover:shadow-purple-900/30',
    'hover:-translate-y-2 hover:bg-gradient-to-br hover:from-neutral-900/95 hover:via-purple-950/20 hover:to-neutral-900/95',
    'backdrop-blur-sm',
    className
  ]}
>
  <div class="relative z-10">
    {icon && (
      <div class="mb-4 text-4xl text-neutral-500 group-hover:text-neutral-400 transition-colors">
        {icon}
      </div>
    )}
    {title && (
      <h3 class="text-xl font-semibold text-neutral-200 mb-2">
        {title}
      </h3>
    )}
    {description && (
      <p class="text-neutral-400 leading-relaxed">
        {description}
      </p>
    )}
    <slot />
  </div>
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-neutral-800/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
</div>