---
import Button from './Button.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-glass border-b border-neutral-900">
  <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-neutral-900 text-neutral-100 px-4 py-2 rounded">
    Aller au contenu principal
  </a>
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3 text-2xl font-bold text-gradient tracking-tightest">
        <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="6" y="7" width="12" height="10" rx="2" class="stroke-purple-500" stroke-width="1.5" fill="none"/>
          <rect x="8" y="10" width="3" height="2" rx="0.5" class="fill-cyan-400"/>
          <rect x="13" y="10" width="3" height="2" rx="0.5" class="fill-cyan-400"/>
          <rect x="10" y="14" width="4" height="1" rx="0.5" class="fill-purple-400"/>
          <rect x="9" y="4" width="1" height="3" class="fill-purple-500"/>
          <rect x="14" y="4" width="1" height="3" class="fill-purple-500"/>
          <circle cx="9.5" cy="3.5" r="1.5" class="fill-cyan-400"/>
          <circle cx="14.5" cy="3.5" r="1.5" class="fill-cyan-400"/>
          <path d="M6 17 L6 19 M18 17 L18 19 M9 17 L9 19 M15 17 L15 19" class="stroke-purple-500" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        Dev Agents
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="#services" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Nos services
        </a>
        <a href="#clients" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Nos clients
        </a>
        <a href="#contact" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Contact
        </a>
        <Button variant="primary" size="sm" href="#contact">
          Commencer
        </Button>
      </div>
      
      <button
        id="mobile-menu-button"
        class="md:hidden text-neutral-400 hover:text-neutral-200 transition-colors"
        aria-label="Basculer le menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden mt-4 py-4 border-t border-neutral-900">
      <div class="flex flex-col space-y-4">
        <a href="#services" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Nos services
        </a>
        <a href="#clients" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Nos clients
        </a>
        <a href="#contact" class="text-neutral-400 hover:text-neutral-200 transition-colors">
          Contact
        </a>
        <Button variant="primary" size="sm" href="#contact" class="w-full">
          Get Started
        </Button>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>